aside
    h1=preloader.title
    ul.menu(id="data-eta")
        each lesson in lessons
            - var activeClass = lesson.base === base ? 'active-base' : '';
            li(class= lesson.lessons.length > 0 ? `menu-item menu-item-has-children fl-grid ${activeClass}` : `menu-item ${activeClass}`)
                a(href=`${lesson.base}`)=lesson.title
                if lesson.lessons.length > 0
                    button.expand(data-eta-trigger=`${lesson.base}`)
                    ul.sub-menu(data-eta-receiver=`${lesson.base}`, class="w100")
                        each page in lesson.lessons
                            li(class="menu-item")
                                a(href=`${lesson.base}/${page.id}`, class = page.id === id ? 'active' : '')=page.title
.close(class="fl-center ps-absolute c-pointer t", data-close) &times;

